{% extends "layouts/base.twig" %}

{% block content %}

	<!-------------------------------->
	<!--TOP DIVIDER-->
	<!-------------------------------->
	<section name="TOP DIVIDER">
		<div class="wrapperdiv divider" style="background-color: white;">
			<div class="bodycontentdiv" style="max-width: 750px;">
				<a href="/">HOME</a> / <a href="{{ page.url }}">{{ page.title | upper }}</a>
			</div>
		</div>
	</section>

	<div class="content-wrapper container">
		<article class="post-type-page " id="post-{{page.id}}">
			<div class="row">
				<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
					{% if device.isPhone %}
						<div><h1>{{page.title}}</h1></div>
					{% endif %}
					<div class='post-content'>{{page.content}}</div>
				</div>
			</div>
		</article>
	</div>

{% endblock %}

{% block stylesheets %}
    {{ "css/richText.css" | globalAssetUrl | stylesheetTag  }}
{% endblock %}