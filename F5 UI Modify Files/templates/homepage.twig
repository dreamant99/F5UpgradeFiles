    <!-------------------------------->
    <!--PRODUCTS-->
    <!-------------------------------->
    <section name="PRODUCTS">
        <div class="wrapperdiv">
            <div class="bodycontentdiv" style="padding: 25px 0px">
                {% paginate collections["homepage-frames"].products by 5 (fixedPage = 1) %}
                {{ macro.draw_large_product_square(paginate.results[0], store.currency.symbol) }}
                {{ macro.draw_product_square(paginate.results[1], store.currency.symbol) }}
                {{ macro.draw_product_square(paginate.results[2], store.currency.symbol) }}
                {{ macro.draw_product_square(paginate.results[3], store.currency.symbol) }}
                {{ macro.draw_product_square(paginate.results[4], store.currency.symbol) }}
                {% endpaginate %}
            </div>
        </div>
    </section>
    <!-------------------------------->
    <!--PORTFOLIO-->
    <!-------------------------------->
    <section name="PORTFOLIO">
        <div class="wrapperdiv">
            {% paginate blogs["portfolio"].posts by 2 (fixedPage = 1) %}
            {{ macro.draw_portfolio_item(paginate.results[0]) }}
            {{ macro.draw_portfolio_item(paginate.results[1]) }}
            {% endpaginate %}
        </div>
    </section>
    <!-------------------------------->
    <!--INSTAGRAM [START HIDDEN - IS SHOWN BY JQUERY IF BROWSER IS OUTSIDE CHINA-->
    <!-------------------------------->
    <section name="INSTAGRAM" id="section-instagram" style="display: none">
        <div class="wrapperdiv">
            <div class="bodycontentdiv" style="padding: 25px 0px;">
                <div class="onewideseamless onehighseamless contentpane showhim" style="background-image: url(http://eap-us-eshop.s3.amazonaws.com/eshop/T360/uploads/2015/07/28144659/F5IG.png);"></div>
                <div id="instafeed"></div>
            </div>
        </div>
    </section>
    <!-------------------------------->
    <!--SHIPPING PLEDGE--------------->
    <!-------------------------------->
    <section name="SHIPPING PLEDGES">
        <div class="wrapperdiv" style="background-color: #F3F3F3">
            <div class="bodycontentdiv" style="padding: 5px 0px">
                <div class="twowideresponsiveseamless contentpane">
                    <img data-original="http://eap-us-eshop.s3.amazonaws.com/eshop/T360/uploads/2015/08/18062243/shippingbar12.png" width=100%>
                </div>
                <div class="twowideresponsiveseamless contentpane">
                    <img data-original="http://eap-us-eshop.s3.amazonaws.com/eshop/T360/uploads/2015/07/28144659/f5_free_china_shipping.png" width=100%>
                </div>
            </div>
        </div>
    </section>
    <!-------------------------------->
    <!--BLOG POSTS-->
    <!-------------------------------->
    <section name="BLOG POSTS">
        <div class="wrapperdiv">
            <div class="bodycontentdiv" style="padding: 25px 0px">
                {% paginate blogs["blog"].posts by 2 (fixedPage = 1) %}
                {{ macro.draw_blog_tile(paginate.results[0]) }}
                {{ macro.draw_blog_tile(paginate.results[1]) }}
                {% endpaginate %}
            </div>
        </div>
    </section>

{% endblock %}