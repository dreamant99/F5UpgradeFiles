{% extends "layouts/base.twig" %}
{% import "snippets/macro.twig" as macro %}
{% set show_multi_currency = true %}
{% block logo %}
  {% if not device.isDesktop %}
    {% include 'snippets/header.twig' %}
  {% endif %}
{% endblock %}
{% block stylesheets %}
    {{ "/slick-carousel/1.5.8/slick.min.css" | thirdPartyAssetUrl | stylesheetTag}}
    {{ "/slick-carousel/1.5.8/slick-theme.min.css" | thirdPartyAssetUrl | stylesheetTag}}
    {{ "css/home.css" | assetUrl | stylesheetTag  }}
{% endblock %}
{% block scripts %}
    {{ "/slick-carousel/1.5.8/slick.min.js" | thirdPartyAssetUrl | scriptTag }}
    {{ "js/home.js" | assetUrl | scriptTag  }}
    {{ "js/instafeed.min.js" | assetUrl | scriptTag  }}
    <script type="text/javascript">
        jQuery.ajax( {
            url: '//freegeoip.net/json/',
            type: 'POST',
            dataType: 'jsonp',
            success: function(location) {

                console.log(location.country_code);

                if (location.country_code == "CN") {
                    // IN CHINA SO DONT SHOW THE ALREADY HIDDEN INSTAGRAM SECTION

                } else {
                    // OUTSIDE CHINA - LOAD THE INSTAFEED CODE AND SHOW THE SECTION
                    var templatecode = '<a href="\{\{link\}\}"><div class="halfwideseamless halfhighseamless contentpane showhim" style="background-image: url(\{\{image\}\});"><div class="showme" style="background-color: black; opacity: 0.7; height: 100%"><div class="paneoverlay showme instagraminfo"><img src="http://eap-us-eshop.s3.amazonaws.com/eshop/T360/uploads/2015/08/19102526/instagram-heart.png" height="10px" width="10px"style="vertical-align: -1px;"> \{\{likes\}\} <img src="http://eap-us-eshop.s3.amazonaws.com/eshop/T360/uploads/2015/08/19102526/instagram-comment.png" height="10px" width="10px" style="vertical-align: -1px;"> \{\{comments\}\}</div></div></div></a>';

                    var feed = new Instafeed({
                        get: 'user',
                        userId: 198306726,
                        accessToken: '198306726.467ede5.0ebd7b213af741a3ad93dda3e0a3a9f4',
                        limit: 12,
                        resolution: 'low_resolution',
                        template: templatecode
                    });

                    feed.run();
                    $('#section-instagram').show();
                }
            }
        } );
    </script>
{% endblock %}

{% block content %}

    <!-------------------------------->
    <!--TOP DIVIDER-->
    <!-------------------------------->
    <section name="TOP DIVIDER">
        <div class="wrapperdiv divider" style="background-color: white;">
            <div class="bodycontentdiv">

            </div>
        </div>
    </section>
    <!-------------------------------->
    <!--TOP TILES-->
    <!-------------------------------->
    <section name="TOP TILES">
        <div class="wrapperdiv">
            <div class="bodycontentdiv">
                {% paginate collections["homepage-top-star"].products by 2 (fixedPage = 1) %}
                {{ macro.draw_star_product(collections["homepage-top-star"], paginate.results[0], store.currency.symbol) }}
                {% endpaginate %}
                {% paginate blogs["events"].posts by 2 (fixedPage = 1) %}
                {{ macro.draw_post_tile(paginate.results[1]) }}
                {% endpaginate %}
                {% paginate blogs["portfolio"].posts by 2 (fixedPage = 1) %}
                {{ macro.draw_portfolio_tile(paginate.results[0]) }}
                {% endpaginate %}

                {{ macro.draw_collection_tile(collections["homepage-top-collection"]) }}

                {% paginate blogs["events"].posts by 2 (fixedPage = 1) %}
                {{ macro.draw_post_tile(paginate.results[0]) }}
                {% endpaginate %}
                {% paginate collections["homepage-top-two"].products by 2 (fixedPage = 1) %}
                {{ macro.draw_product_tile(paginate.results[0], store.currency.symbol) }}
                {% endpaginate %}

                {{ macro.draw_workshop_tile() }}

                {% paginate collections["homepage-top-two"].products by 2 (fixedPage = 1) %}
                {{ macro.draw_product_tile(paginate.results[1], store.currency.symbol) }}
                {% endpaginate %}
            </div>
        </div>
    </section>
    <!-------------------------------->
    <!--QUOTE AND MEDIA-->
    <!-------------------------------->
    <section name="QUOTE AND MEDIA">
